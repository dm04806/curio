{{widget 'heading2' back='/super/medias' title='medias.edit'}}
<div class="box">
  <form class="main-content edit-form form-horizontal" method="post">
    {{#form_rows 'sm' 2}}
      {{form_input 'name' name 'name' 'media.name_tip'}}
      {{form_input 'uid' uid 'media.uid' 'media.uid_tip'}}
      {{form_input 'oid' oid 'media.oid' 'media.oid_tip'}}
      {{form_input 'wx_appkey' wx_appkey 'media.appkey'}}
      {{form_input 'wx_secret' wx_secret 'media.secret'}}
      {{form_input 'wx_token' token 'media.token'}}
      {{form_textarea 'desc' desc 'desc' 'media.desc_tip'}}
    {{/form_rows}}
    <div class="form-group">
      <div class="col-sm-10 col-sm-offset-2">
        <div class="form-message holded"></div>
        <button type="submit" class="btn btn-primary">{{t 'save'}}</button>
      </div>
    </div>
  </form>
</div>
