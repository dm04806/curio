{{#widget 'heading2' title='dashboard' subtitle='dashboard.subtitle'}}
  <!--<span class="ticker alert alert-success">-->
  <!--Subscriber number has reached <strong>10,000</strong>!-->
  <!--</span>-->
{{/widget}}
<div class="row">
  <div class="col col-md-9">
    <div class="row">
    </div>
  </div>
  <div class="col col-md-3">
  </div>
  <div class="col col-md-9">
    {{#widget 'card' title='graph.realtime'}}
    <div id="home-realtime" class="with-transitions with-3d-shadow">
    </div>
    {{/widget}}
  </div>
  <div class="col col-md-3">
    {{#widget 'card' title='graph.yesterday'}}
      <ul class="list-unstyled list-stacked">
        <li>
        <!--<li class="col-sm-4 col-xs-6">-->
          {{widget 'ui/iconed-text' icon='user' signed=yesterday.subscribe text='subscribe' cls='success'}}
        </li>
        <li>
        <!--<li class="col-sm-4 col-xs-6">-->
          {{widget 'ui/iconed-text' icon='bubble2' num=yesterday.messaging text='messages' cls='success'}}
        </li>
        <li>
        <!--<li class="col-sm-4 hidden-xs">-->
          {{widget 'ui/iconed-text' icon='exit' num=yesterday.unsubscribe text='unsubscribe' cls='warning'}}
        </li>
      </ul>
    {{/widget}}
  </div>
</div>
<div class="row recent-updates">
  <div class="col-md-6">
    {{#widget 'card' title='graph.last7'}}
      <div id="last7-chart" class="with-transitions with-3d-shadow">
      </div>
    {{/widget}}
  </div>
  <div class="col-md-6">
    {{#widget 'card' title='graph.last30'}}
      <div id="last30-chart" class="with-transitions with-3d-shadow">
      </div>
    {{/widget}}
  </div>
</div>
