<form class="login-form main-container" action="{{consts.API_ROOT}}/auth" method="post">
  <input type="hidden" class="redir" value="{{mediator.loginReturn}}">
  <div class="form-message"></div>
  <div class="form-group text-right">
    <div class="checkbox pull-left">
      <label>
        <input checked name="remember" value="1" type="checkbox"> {{t 'login.remember'}}
      </label>
    </div>
    <button class="btn btn-primary" type="submit">
      {{t 'login.submit'}}
    </button>
  </div>
</form>

