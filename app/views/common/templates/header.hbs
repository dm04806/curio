<div class="navbar navbar-default">
  <div class="navbar-header">
    <a class="navbar-brand" href="{{when in_super '/super/medias' site_url}}">
      <i></i>
      <span>{{t 'site.name'}}</span>
    </a>
  </div>
  <div id="header-navbar" class="navbar-collapse collapse navbar-default-collapse">
    {{#unless in_super}}
    {{#if media}}
      <ul class="nav navbar-nav">
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
            <span class="avatar">
              <img src="{{media.avatar}}" alt="">
            </span>
            <span class="current-media">
              {{media.name}}
            </span>
            <b class="icon-arrow-down"></b></a>
            <ul class="dropdown-menu toggle-media" role="menu">
              {{#each other_admins}}
                <li><a href="" data-media="{{media.id}}">{{media.name}} ({{media.uid}})</a></li>
              {{/each}}
              {{#if other_admins}}
                <li class="divider"></li>
              {{/if}}
              <li>
                <a href="/wizard">
                  <i class="icon-plus3"></i>
                  {{t 'medias.add_new'}}
                </a>
              </li>
              {{#if is_super}}
                <li>
                <li><a href="/super/medias">
                  <i class="icon-arrow-right"></i>
                  {{t 'medias.pick_another'}}</a></li>
                </li>
              {{/if}}
            </ul>
          </li>
      </ul>
    {{/if}}
    {{/unless}}
    <ul class="nav navbar-nav navbar-right">
      <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">{{g 'header.hello' user.name}} <b class="icon-arrow-down"></b></a>
      <ul class="dropdown-menu" role="menu">
        {{#if is_super}}
          {{#unless in_super}}
            <li><a href="/super/medias">{{t 'super.title'}}</a></li>
          {{/unless}}
        {{/if}}
        <!--<li class="divider"></li>-->
        <li><a href="/logout">{{t 'logout'}}</a></li>
      </ul>
      </li>
      <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown"><b class="icon-earth"></b></a>
        <ul class="dropdown-menu toggle-locale">
          {{#each consts.LOCALES}}
            <li><a href="#" data-locale="{{@key}}">{{this}}</a></li>
          {{/each}}
        </ul>
      </li>
    </ul>
  </div>
</div>
