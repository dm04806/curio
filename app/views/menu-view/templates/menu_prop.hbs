<div class="menu_prop">
  <label>属性:</label>
  <div>
    <ul>
      <li>标签:</li>
      <li>类型:</li>
      <li>数值:</li>
    </ul>
    <div>
      <li>
        <input id="menu_label" type="text" />
      </li>
      <li>
        <select id="menu_type">
          <option value="view" selected="selected">网页链接</option>
          <option value="click">点击动作</option>
        </select>
      </li>
      <li>
        <input id="menu_value" type="text" />
      </li>
      <p>
        <input id="save_menu_item_prop_btn" type="button" value="{{t 'menu.save'}}" />
      </p>
    </div>
    <p>
      <a id="menu_pos_up">上移</a>
      <a id="menu_pos_left">左移</a>
      <a id="menu_pos_right">右移</a>
      <a id="menu_pos_bottom">下移</a>
    </p>
  </div>
</div>