<form id="wx-button-props" class="wx-menu-props form-horizontal" action="">
  <a class="close" href="" data-op="dispose">&times;</a>
  <div class="form-group">
    <label class="col-sm-2 control-label" for="inp-button-name">
      {{t 'menu.button.name'}}
    </label>
    <div class="col-sm-10">
      <input class="form-control" type="text" name="name" id="inp-button-name">
    </div>
  </div>
  {{#unless hasSubmenu}}
    <div class="form-group">
      <label class="control-label col-sm-2" for="inp-button-value">
        {{t 'menu.button.value'}}
      </label>
      <div class="col-sm-10">
        <input class="form-control" id="inp-button-value" name="value" type="text" placeholder="{{t  'menu.button.value_tip'}}" />
      </div>
      <div class="col-sm-offset-2 col-sm-10">
        <label class="checkbox-inline">
          <input class="" name="type" type="checkbox" value="view">
          {{t 'menu.button.is_url'}}
        </label>
      </div>
    </div>
  {{/unless}}
</form>
