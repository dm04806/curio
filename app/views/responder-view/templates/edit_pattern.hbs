{{#widget 'modal' id='edit-pattern' title=title}}
  <textarea class="form-control" name="pattern" cols="30" rows="4" autofocus="true">{{keyword}}</textarea>
  {{#unless keyword}}
    <div class="help-block">
      {{t 'rule.add_pattern.tip'}}
    </div>
    <div class="keywords-list">
    </div>
  {{/unless}}
  {{#set 'footer'}}
    <button type="button" class="btn btn-default" data-dismiss="modal">{{t 'cancel'}}</button>
    <button type="submit" class="btn btn-primary" data-op="toConfirm">{{t 'ok'}}</button>
  {{/set}}
{{/widget}}

