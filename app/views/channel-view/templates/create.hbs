{{#widget 'modal' id='create-channel' title='channels.create'}}

<form method="put" action="{{form_action}}">
  <table class="table">
    <colgroup>
      <col width="30%">
      <col width="70%">
    </colgroup>
    <tr>
      <th>{{t 'channel.scene_id'}}</th>
      <th>{{t 'channel.name'}}</th>
    </tr>
    <tr>
      <td>
        <input value="{{start_scene_id}}" required name="scene_id" class="form-control" type="text" placeholder="{{t 'channel.input_scene_id'}}">
      </td>
      <td>
        <input required name="name" class="form-control" type="text" placeholder="{{t 'channel.input_name'}}">
      </td>
    </tr>
    <tr class="add-row">
      <td colspan="3">
        <a class="btn btn-default" data-op="addRow">
          <span class="icon-plus2"></span>
          {{t 'more'}}
        </a>
      </td>
    </tr>
  </table>
</form>

{{#set 'footer'}}
  <button class="btn btn-default" data-op="toCancel">
    {{t 'cancel'}}
  </button>
  <button class="btn btn-primary" data-op="toConfirm">
    {{t 'create'}}
  </button>
{{/set}}

{{/widget}}
