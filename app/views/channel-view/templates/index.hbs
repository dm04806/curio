{{#widget 'heading2' title='channels.index.h1'}}
  {{#if total}}
    <a data-op="toCreate" class="btn btn-sm btn-primary">
      <i class="icon-plus22"></i>
      {{t 'create'}}
    </a>
  {{/if}}
{{/widget}}
<div class="listable">
  <div class="list channel-list">
  </div>
  <div class="placeholder">
    <div class="loading-indicator spinner spinner30">
      <!--{{t 'loading'}}-->
    </div>
  </div>
  <div class="fallback box">
    <div class="box">
      {{t 'channels.there_is_none'}}
    </div>
    <a class="btn btn-primary btn-md" data-op="toCreate">{{t 'channels.create_one_now'}}</a>
  </div>
</div>
