<div class="form-group" for="{{name}}">
  {{#if label}}
    <label for="input-{{name}}" class="{{label_cls}} control-label">{{label}}</label>
  {{/if}}
  <div class="{{row_cls}}">
    <textarea {{{attrs}}}>{{value}}</textarea>
    <div class="form-tip" for="{{name}}">{{{tip}}}</div>
  </div>
</div>



