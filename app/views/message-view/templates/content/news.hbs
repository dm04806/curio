{{#compare content.length '>' 1}}
  <div class="news-message multi">
    {{#each content}}
      <a href="{{url}}">
        <h3 class="title">{{title}}</h3>
        <div class="pic">
          <img src="{{picUrl}}" alt="">
        </div>
      </a>
    {{/each}}
  </div>
  {{else}}
  <div class="news-message">
    {{#each content}}
      <a href="{{url}}">
        <h3 class="title">{{title}}</h3>
        <div class="time">
          {{strftime 'MMM Do' created_at}}
        </div>
        <div class="pic">
          <img src="{{picUrl}}" alt="">
        </div>
        {{#if description}}
        <div class="description">
          {{description}}
        </div>
        {{/if}}
        <div class="view-full">
          {{t 'message.view_full'}}
          <i class="icon-arrow-right"></i>
        </div>
      </a>
    {{/each}}
  </div>
{{/compare}}

