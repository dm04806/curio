<div class="container">
<div class="alert alert-{{category}}">
  {{#if title}}
    <h1>{{title}}</h1>
  {{/if}}
  {{#if detail}}
    <div class="error-detail">
      {{{detail}}}
    </div>
  {{/if}}
  {{#if user.isSuper}}
    <div class="error-detail">
      <a href="/super">&raquo; 去超级管理后台</a>
    </div>
  {{/if}}
</div>
</div>
