<div class="container">
<div class="alert alert-{{category}}">
  {{#if title}}
    <h1>{{title}}</h1>
  {{/if}}
  {{#if detail}}
    <div class="error-detail">
      {{{detail}}}
    </div>
  {{/if}}
  <div class="error-detail">
    {{#if user.isSuper}}
      <a href="/super">&raquo; {{t 'error.gosuper'}}</a> &nbsp;&nbsp;
    {{/if}}
    <a href="/">&raquo; {{t 'error.goback'}}</a>
  </div>
</div>
</div>
