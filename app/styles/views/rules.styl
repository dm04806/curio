.tab-pane .form-control
  border-radius: 0 0 2px 2px
  box-shadow: inset 0 1px 4px rgba(0,0,0,0.075)

.rules-list
  .panel-footer
    text-align: right
  .section-bar
    line-height: 32px
    padding: 5px 30px
    margin: 0 -15px 15px
    background: #f0f0f0
    border-top: 1px solid #e0e0e0
  .panel-heading
    font-weight: 600
  .rule-item
    margin-bottom: 10px
  .nav-tabs > li > a
    border-radius: 1px
    padding-top: 6px
    padding-bottom: 6px
    margin-top: 0
    transition: none
  .nav-tabs > li.active > a
    background: lighten(brand-primary, 20%)
    color: #fff
    border-color: lighten(brand-primary, 15%)
    border-bottom: 0
    padding-top: 6px
    padding-bottom: 7px


.rule-item
  .news-message
    margin: 20px 0
  .ops .lnk-icon
    margin-left: 8px
    color: #999
    text-decoration: none



