

.news-message
  box-shadow: 0 1px 0 rgba(0,0,0,.05)
  border-radius: 4px
  width: 320px
  margin: 10px auto 20px
  a
    color: #999
    display: block
    border-radius: 4px
    background: #fff
    border: 1px solid #cfcfcf
    padding: 8px
    &:hover
      text-decoration: none
      background: #f9f9f9
  h3
    color: #111
    font-weight: 500
    font-size: 16px
    line-height: 1.2em
    margin: 0 0 0.8em
  img
    height: 140px
    width: 100%
    display: block
    background: #f9f9f9
  .description
    font-size: 14px
    padding: 15px 10px
    margin-top: 10px
  .time
    text-align: left
    margin-bottom: 15px
  .view-full
    margin-top: 12px
    padding-top: 8px 
    border-top: 1px solid #e6e6e6
    color: #111
    font-size: 15px
    i
      float: right

.news-message.multi
  h3
    font-size: 16px
    display: inline-block
    line-height: 40px
    padding: 5px
    margin: 0
  a
    margin-bottom: -1px
    border-radius: 0
  a:first-child
    border-radius: 4px 4px 0 0
    position: relative
    h3
      margin: 0
      display: block
      vertical-align: middle
      position: absolute
      bottom: 10px
      right: 10px
      left: 10px
      line-height: 1.5
      color: #fff
      background: rgba(0,0,0,.8)
    .pic
      float: none
      width: 100%
      height: 140px
  a:last-child
    border-radius: 0 0 4px 4px
  .pic
    overflow: hidden
    float: right
    width: 50px
    height: 50px
  img
    height: auto
    width: auto
    max-width: 200%
    max-height: 200%
