modal_index = 1050

.noti
  position: absolute
  z-index: modal_index + 10
  text-align: center
  top: 10px
  left: 0
  right: 0
  font-size: 12px
  .alert
    display: inline-block
    padding: 0.5em 1em
    border-radius: 0 0 3px 3px


#global-noti
  top: 0
  position: fixed
  display: none


.modal-header
  position: relative
  background: #fff
  z-index: 1

.modal-body
  .noti
    top: 0
    z-index: 0
