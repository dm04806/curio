dot_color = rgba(200,100,10, 0.9)

@keyframes spin
  0%
    transform: rotate(0deg)
  100%
    transform: rotate(360deg)

@keyframes bouncing-dot
  0%
    left: 0
    width: 0
  25%
    left: 20%
    width: 50%
    opacity: .5
  50%
    left: 100%
    opacity: 1
    width: 20%
  70%
    left: 50%
    width: 40%
    opacity: 0.6
  100%
    left: 0
    width: 0
    opacity: 0

.bouncing-bar
  position: absolute
  width: 100%
  top: -21px
  left: 0
  overflow: hidden
  padding: 20px 0
  display: none
  .bar
    height: 4px
    background: brand-info
    transition: opacity 0.2s linear
  &:before, &:after
    content: ''
    display: block
    background: darken(brand-info, 20%)
    position: absolute
    width: 0
    height: 4px
    left: 0
    top: 20px
    box-shadow: 0 0 20px darken(brand-info, 20%)
    animation-name: bouncing-dot 
    animation-duration: 4s
    animation-timing-function: linear
    animation-iteration-count: infinite 
  &:after
    animation-delay: .4s

.syncing .bouncing-bar
  display: block

.modal-open #main .bouncing-bar
  display: none

spinner-size(size)
  border-width: (size/7)
  border-style: solid
  border-radius: size
  width: size
  height: size

spinner-color(color)
  border-color: rgba(0,0,0,0)
  //border-top-color: complement(color)
  border-right-color: color
  border-bottom-color: color
  border-left-color: color

.spinner
  display: inline-block
  animation: spin .5s infinite linear
  //border-left-color: rgba(0,0,0,0)
  spinner-color(lighten(brand-primary, 40%))

.spinner30
  @extend .spinner
  spinner-size(30px)
