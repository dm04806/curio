
.sidebar-nav
  height: 100%
  width: sidebar_width
  position: absolute
  z-index: header_index + 1
  left: 0
  border-right: 1px solid darken(bg_sidebar, 5%)
  border-top: 4px solid darken(bg_sidebar, 5%)
  top: header_height
  box-sizing: border-box
  padding-top: 20px
  &, .nav
    background: bg_sidebar
  .nav
    a
      color: #999
      border-radius: 0
    > li > a:hover
      color: #aaa
      background: lighten(bg_sidebar, 5%)
    > li.active > a
      color: #ccc
      background: lighten(bg_sidebar, 12%)
