bubble_bg = #f7f7f7
bubble_text = #677693

.chat-widget
  .media-list
    color: bubble_text
    > .pull-left
      margin-right: 10px
    > .pull-right
      margin-left: 10px
    .box
      margin-bottom: 20px
      padding-top: 20px
      padding-bottom: 20px
      border-radius: 2px
  .media
    padding: 5px 20px
  .media-body
    font-size: 16px
    background: bubble_bg
    padding: 0.8em
    border-radius: 6px
    min-height: 60px
    max-width: 380px
    margin-left: auto
  .incoming
    .media-body
      margin-left: 0
  .time
    font-size: 0.8em
    text-align: right
    margin: 1em 0 0.3em
    color: desaturate(lighten(bubble_text, 50%), 50%)

