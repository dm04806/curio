
.tag
  margin-right: 0.5em
  margin-bottom: 0.5em
  border-radius: 2px
  display: inline-block
  padding: 0.2em 0.5em
  background: rgba(0,0,0,0.1)
  .cancel
    display: inline-block
    cursor: pointer
    color: #999
    font-size: 1.2em
    line-height: 0
    padding: 0.2em 0.5em
    margin-right: -0.4em
    margin-top: -0.3em
    text-decoration: none
    &:hover
      color: #333
