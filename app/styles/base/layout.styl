.layout-normal
  #main
    margin-left: sidebar_width
    min-height: 600px

.layout-single
  background: bg_dark
  padding: 8% 0
  .heading h1
    color: #aaa
  #main
    padding: 20px
    max-width: 600px
    margin: 0 auto
  .main-container
    padding: 50px 30px
    background: linear-gradient(top, #fff, #fefef9)
    border-radius: 3px
    box-shadow: 0 4px 16px rgba(0,0,0,0.2)

.view-title
  height: 24px
  margin-bottom: 30px
  .btn
    margin-right: 10px
    margin-top: -8px
    font-size: 14px
    line-height: 1
    padding: 6px 10px 4px
  h1
    display: inline-block
    margin: 0

.heading
  text-align: center
  margin-bottom: 30px
