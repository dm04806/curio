.layout-normal
  #header .navbar
    margin-bottom: 0
  #main
    margin-left: sidebar_width
    min-height: 600px
    position: relative
    z-index: header_index
    padding-top: 24px
    margin-top: -3px

.layout-single
  padding: 8% 0
  &, body
    background: bg_dark
  .heading h1
    color: #aaa
  #main
    padding: 20px
    max-width: 600px
    margin: 0 auto
  .main-container
    padding: 50px 30px
    background: linear-gradient(top, #fff, #fcfcfc)
    border-radius: 3px
    box-shadow: 0 4px 16px rgba(0,0,0,0.2)
