.layout-normal
  #main
    margin-left: sidebar_width
    min-height: 600px

.layout-single
  background: bg_dark
  padding: 8% 0
  .heading h1
    color: #aaa
  #main
    padding: 20px
    max-width: 600px
    margin: 0 auto
  .main-container
    padding: 50px 30px
    background: linear-gradient(top, #fff, #fcfcfc)
    border-radius: 3px
    box-shadow: 0 4px 16px rgba(0,0,0,0.2)
